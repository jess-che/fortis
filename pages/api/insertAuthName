import { Pool } from 'pg';

const pool = new Pool({
    // connectionString: process.env.POSTGRES_URL
    connectionString: "postgres://default:Azy2srgWb9aU@ep-polished-cherry-55480419-pooler.us-east-1.postgres.vercel-storage.com/verceldb?sslmode=require"
});

const insertName = `
    INSERT INTO user_data (uid, name, gym)
    VALUES ($1, $2, DEFAULT)
`;

export default async (req, res) => {
    if (req.method === 'POST') {
        const { uid, name } = req.body; // Changed email to name

        try {
            console.log('Success! InsertAuthName');
            await pool.query(insertName, [uid, name]); // Make sure the columns match your table schema
            
            res.status(200).send('Data saved successfully');
        } catch (err) {
            console.log('Error in InsertAuthName');
            console.error(err);
            res.status(500).json({ error: err.message });
        }
    } else {
        res.status(405).end();  // Method Not Allowed
    }
};